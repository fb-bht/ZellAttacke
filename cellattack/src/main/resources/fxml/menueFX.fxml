<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.bht.cellattack.controller.MenueFXController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/immunsystem.jpg" />
         </image>
      </ImageView>
      <Pane layoutX="20.0" layoutY="20.0" opacity="0.5" prefHeight="360.0" prefWidth="560.0" style="-fx-background-color: #ffa5a0;" />
      <AnchorPane layoutX="20.0" layoutY="20.0" prefHeight="360.0" prefWidth="560.0">
         <children>
            <VBox alignment="CENTER" layoutX="180.0" layoutY="80.0" prefHeight="200.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: #ffb3b0;">
               <children>
                  <Button fx:id="btnGamerules" mnemonicParsing="false" onAction="#howToPlay" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #ffa5a0; -fx-border-color: #ff8a84; -fx-border-width: 2px;" text="Spielregeln" textFill="#e61610">
                     <font>
                        <Font name="Comic Sans MS" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnScore" mnemonicParsing="false" onAction="#openScore" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #ffa5a0; -fx-border-color: #ff8a84; -fx-border-width: 2px;" text="Highscore" textFill="#e61610">
                     <font>
                        <Font name="Comic Sans MS" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnNewGame" layoutX="35.0" layoutY="120.0" mnemonicParsing="false" onAction="#openNewGame" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #ffa5a0; -fx-border-color: #ff8a84; -fx-border-width: 2px;" text="Neues Spiel" textFill="#e61610">
                     <font>
                        <Font name="Comic Sans MS" size="18.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
